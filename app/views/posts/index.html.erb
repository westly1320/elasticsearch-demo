<p style="color: green"><%= notice %></p>

<h1 class="text-4xl text-center mt-5 mb-4">Posts</h1>

<div class="flex justify-center">
  <%= render partial: 'search/form', locals: { results: [] } %>
</div>

<div class="flex justify-end mx-10">
  <%= link_to "New post", new_post_path, class: "cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div id="posts" class="mt-4 mx-10">
  <%= render partial: 'posts/posts', collection: @posts, as: :post %>
</div>

